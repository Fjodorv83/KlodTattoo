@model KlodTattooWeb.Models.TattooStyle

@{
    ViewData["Title"] = "Crea Stile";
    Layout = "_Layout";
}

<h1 class="text-center">Crea Stile</h1>

<h4 class="text-center">TattooStyle</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <!-- col più larga e centrata -->
        <form asp-area="Admin" asp-controller="TattooStyles" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Crea" class="btn btn-primary" />
                <a asp-area="Admin" asp-controller="TattooStyles" asp-action="Index" class="btn btn-secondary ms-2">Annulla</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
