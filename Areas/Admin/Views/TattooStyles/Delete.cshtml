@model KlodTattooWeb.Models.TattooStyle

@{
    ViewData["Title"] = "Elimina Stile";
}

<h1 class="text-center text-danger">Elimina Stile</h1>

<h3 class="text-center">Sei sicuro di voler eliminare questo stile?</h3>

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <h4 class="text-center">TattooStyle</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
        </dl>

        <form asp-area="Admin"
              asp-controller="TattooStyles"
              asp-action="Delete"
              method="post"
              class="text-center mt-3">

            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn btn-danger px-4">Elimina</button>
            <a asp-area="Admin"
               asp-controller="TattooStyles"
               asp-action="Index"
               class="btn btn-secondary ms-2">Annulla</a>
        </form>
    </div>
</div>
