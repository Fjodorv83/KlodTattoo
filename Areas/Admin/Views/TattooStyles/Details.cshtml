@model KlodTattooWeb.Models.TattooStyle

@{
    ViewData["Title"] = "Dettagli Stile";
    Layout = "_Layout";
}

<h1 class="text-center">Dettagli Stile</h1>

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <h4 class="text-center">TattooStyle</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>

        <div class="text-center mt-4">
            <a asp-area="Admin"
               asp-controller="TattooStyles"
               asp-action="Edit"
               asp-route-id="@Model.Id"
               class="btn btn-primary">Modifica</a>

            <a asp-area="Admin"
               asp-controller="TattooStyles"
               asp-action="Index"
               class="btn btn-secondary ms-2">Torna alla Lista</a>
        </div>
    </div>
</div>
