@model IEnumerable<KlodTattooWeb.Models.TattooStyle>
@{
    ViewData["Title"] = "Gestione Stili Tatuaggio";
    Layout = "_Layout";
}

<div class="container-fluid py-4">

    <!-- Header pagina -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">Gestione Stili Tatuaggio</h1>
        <a asp-area="Admin" asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Torna alla Dashboard
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info shadow-sm" role="alert">
            <i class="bi bi-info-circle"></i>
            Non ci sono stili di tatuaggio al momento.
            <a asp-area="Admin" asp-controller="TattooStyles" asp-action="Create" class="alert-link">Creane uno ora</a>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Elenco Stili (@Model.Count())</h5>

                <a asp-area="Admin"
                   asp-controller="TattooStyles"
                   asp-action="Create"
                   class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Crea Nuovo
                </a>
            </div>

            <div class="card-body p-0">

                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">@Html.DisplayNameFor(m => m.First().Name)</th>
                                <th class="text-end pe-4" style="width: 250px;">Azioni</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 align-middle">
                                        <strong>@item.Name</strong>
                                    </td>

                                    <td class="text-end pe-4">
                                        <div class="btn-group" role="group">

                                            <a asp-area="Admin"
                                               asp-controller="TattooStyles"
                                               asp-action="Details"
                                               asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-info">
                                                <i class="bi bi-eye"></i> Dettagli
                                            </a>

                                            <a asp-area="Admin"
                                               asp-controller="TattooStyles"
                                               asp-action="Edit"
                                               asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil"></i> Modifica
                                            </a>

                                            <a asp-area="Admin"
                                               asp-controller="TattooStyles"
                                               asp-action="Delete"
                                               asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i> Elimina
                                            </a>

                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'))
        tooltipTriggerList.map(function (el) { return new bootstrap.Tooltip(el) })
    </script>
}
