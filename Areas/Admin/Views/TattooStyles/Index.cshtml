@model IEnumerable<KlodTattooWeb.Models.TattooStyle>

@{
    ViewData["Title"] = "Gestione Stili Tatuaggio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Gestione Stili Tatuaggio</h1>

<div class="mb-3">
    <a asp-area="" asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Torna alla Dashboard Admin</a>
</div>

<p>
    <a asp-area="Admin" asp-controller="TattooStyles" asp-action="Create" class="btn btn-primary">Crea Nuovo Stile</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-area="Admin" asp-controller="TattooStyles" asp-action="Edit" asp-route-id="@item.Id">Modifica</a> |
                    <a asp-area="Admin" asp-controller="TattooStyles" asp-action="Details" asp-route-id="@item.Id">Dettagli</a> |
                    <a asp-area="Admin" asp-controller="TattooStyles" asp-action="Delete" asp-route-id="@item.Id">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>
