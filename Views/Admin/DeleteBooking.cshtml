@model KlodTattooWeb.Models.BookingRequest

@{
    ViewData["Title"] = "Elimina Prenotazione";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Elimina</h1>

<h3>Sei sicuro di voler eliminare questa richiesta di prenotazione?</h3>
<div>
    <h4>Richiesta di Prenotazione</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClientName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClientName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PreferredDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PreferredDate)
        </dd>
    </dl>
    
    <form asp-action="DeleteBooking">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Elimina" class="btn btn-danger" /> |
        <a asp-action="Bookings">Torna alla Lista</a>
    </form>
</div>
