@model KlodTattooWeb.Models.PortfolioItem

@{
    ViewData["Title"] = "Dettagli Elemento Portfolio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Dettagli</h1>

<h4 class="text-center">Elemento Portfolio</h4>
<hr />

<div class="row justify-content-center mt-4">
    <div class="col-md-6">

        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Title)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-4">Stile</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.TattooStyle.Name)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ImageUrl)</dt>
            <dd class="col-sm-8">
                <img src="@Model.ImageUrl"
                     alt="@Model.Title"
                     style="max-width: 250px; max-height: 250px; border-radius: 8px;" />
            </dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedAt)</dd>
        </dl>

        <div class="text-center mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Modifica</a>
            <a asp-action="Index" class="btn btn-secondary ms-2">Torna alla Lista</a>
        </div>

    </div>
</div>
