@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Page_Title"];
}

<div class="container py-5">
    <!-- Header Section -->
    <div class="text-center mb-5" data-aos="fade-down">
        <h1 class="display-3 fw-bold text-uppercase mb-3" style="color: #d4af37; letter-spacing: 3px;">
            @Localizer["Page_Title"]
        </h1>
        <p class="lead text-muted fs-4">@Localizer["Page_Subtitle"]</p>
        <div class="golden-underline mx-auto mt-3" style="width: 100px; height: 4px; background: linear-gradient(90deg, transparent, #d4af37, transparent);"></div>
    </div>

    <!-- Main Content -->
    <div class="row g-4 mb-5">
        <!-- Aftercare Card -->
        <div class="col-lg-6" data-aos="fade-right">
            <div class="card h-100 shadow-lg border-0 overflow-hidden" style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);">
                <div class="card-header border-0 text-center py-4" style="background: linear-gradient(135deg, #d4af37 0%, #c9a22e 100%);">
                    <i class="fas fa-hand-holding-medical fa-3x text-dark mb-3"></i>
                    <h3 class="h4 mb-0 text-uppercase fw-bold text-dark">@Localizer["Aftercare_Title"]</h3>
                </div>
                <div class="card-body p-4">
                    <p class="text-light mb-4 lead">
                        @Localizer["Aftercare_Instructions"]
                    </p>

                    <div class="aftercare-steps">
                        <!-- Step 1 -->
                        <div class="step-item d-flex mb-4 p-3 rounded" style="background: rgba(212, 175, 55, 0.1); border-left: 4px solid #d4af37;">
                            <div class="step-number me-3">
                                <div class="rounded-circle bg-warning d-flex align-items-center justify-content-center"
                                     style="width: 40px; height: 40px; min-width: 40px;">
                                    <span class="fw-bold text-dark">1</span>
                                </div>
                            </div>
                            <div class="step-content">
                                <h5 class="text-light mb-2">
                                    <i class="fas fa-clock text-warning me-2"></i>@Localizer["Aftercare_Step1_Title"]
                                </h5>
                                <p class="text-muted mb-0">@Localizer["Aftercare_Step1_Text"]</p>
                            </div>
                        </div>

                        <!-- Step 2 -->
                        <div class="step-item d-flex mb-4 p-3 rounded" style="background: rgba(212, 175, 55, 0.1); border-left: 4px solid #d4af37;">
                            <div class="step-number me-3">
                                <div class="rounded-circle bg-warning d-flex align-items-center justify-content-center"
                                     style="width: 40px; height: 40px; min-width: 40px;">
                                    <span class="fw-bold text-dark">2</span>
                                </div>
                            </div>
                            <div class="step-content">
                                <h5 class="text-light mb-2">
                                    <i class="fas fa-hand-sparkles text-warning me-2"></i>@Localizer["Aftercare_Step2_Title"]
                                </h5>
                                <p class="text-muted mb-0">@Localizer["Aftercare_Step2_Text"]</p>
                            </div>
                        </div>

                        <!-- Step 3 -->
                        <div class="step-item d-flex mb-4 p-3 rounded" style="background: rgba(212, 175, 55, 0.1); border-left: 4px solid #d4af37;">
                            <div class="step-number me-3">
                                <div class="rounded-circle bg-warning d-flex align-items-center justify-content-center"
                                     style="width: 40px; height: 40px; min-width: 40px;">
                                    <span class="fw-bold text-dark">3</span>
                                </div>
                            </div>
                            <div class="step-content">
                                <h5 class="text-light mb-2">
                                    <i class="fas fa-wind text-warning me-2"></i>@Localizer["Aftercare_Step3_Title"]
                                </h5>
                                <p class="text-muted mb-0">@Localizer["Aftercare_Step3_Text"]</p>
                            </div>
                        </div>

                        <!-- Step 4 -->
                        <div class="step-item d-flex mb-4 p-3 rounded" style="background: rgba(212, 175, 55, 0.1); border-left: 4px solid #d4af37;">
                            <div class="step-number me-3">
                                <div class="rounded-circle bg-warning d-flex align-items-center justify-content-center"
                                     style="width: 40px; height: 40px; min-width: 40px;">
                                    <span class="fw-bold text-dark">4</span>
                                </div>
                            </div>
                            <div class="step-content">
                                <h5 class="text-light mb-2">
                                    <i class="fas fa-pump-medical text-warning me-2"></i>@Localizer["Aftercare_Step4_Title"]
                                </h5>
                                <p class="text-muted mb-0">@Localizer["Aftercare_Step4_Text"]</p>
                            </div>
                        </div>

                        <!-- Step 5 -->
                        <div class="step-item d-flex mb-4 p-3 rounded" style="background: rgba(212, 175, 55, 0.1); border-left: 4px solid #d4af37;">
                            <div class="step-number me-3">
                                <div class="rounded-circle bg-warning d-flex align-items-center justify-content-center"
                                     style="width: 40px; height: 40px; min-width: 40px;">
                                    <span class="fw-bold text-dark">5</span>
                                </div>
                            </div>
                            <div class="step-content">
                                <h5 class="text-light mb-2">
                                    <i class="fas fa-ban text-warning me-2"></i>@Localizer["Aftercare_Step5_Title"]
                                </h5>
                                <p class="text-muted mb-0">@Localizer["Aftercare_Step5_Text"]</p>
                            </div>
                        </div>

                        <!-- Step 6 -->
                        <div class="step-item d-flex p-3 rounded" style="background: rgba(212, 175, 55, 0.1); border-left: 4px solid #d4af37;">
                            <div class="step-number me-3">
                                <div class="rounded-circle bg-warning d-flex align-items-center justify-content-center"
                                     style="width: 40px; height: 40px; min-width: 40px;">
                                    <span class="fw-bold text-dark">6</span>
                                </div>
                            </div>
                            <div class="step-content">
                                <h5 class="text-light mb-2">
                                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>@Localizer["Aftercare_Step6_Title"]
                                </h5>
                                <p class="text-muted mb-0">@Localizer["Aftercare_Step6_Text"]</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Important Tips Card -->
        <div class="col-lg-6" data-aos="fade-left">
            <div class="card h-100 shadow-lg border-0 overflow-hidden" style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);">
                <div class="card-header border-0 text-center py-4" style="background: linear-gradient(135deg, #d4af37 0%, #c9a22e 100%);">
                    <i class="fas fa-lightbulb fa-3x text-dark mb-3"></i>
                    <h3 class="h4 mb-0 text-uppercase fw-bold text-dark">@Localizer["Tips_Title"]</h3>
                </div>
                <div class="card-body p-4">
                    <!-- Do's Section -->
                    <div class="mb-4">
                        <h5 class="text-success mb-3">
                            <i class="fas fa-check-circle me-2"></i>@Localizer["Tips_Dos_Title"]
                        </h5>
                        <ul class="list-unstyled">
                            <li class="mb-3 d-flex align-items-start">
                                <i class="fas fa-check text-gold me-3 mt-1"></i>
                                <span class="text-light">@Localizer["Tips_Dos_1"]</span>
                            </li>
                            <li class="mb-3 d-flex align-items-start">
                                <i class="fas fa-check text-gold me-3 mt-1"></i>
                                <span class="text-light">@Localizer["Tips_Dos_2"]</span>
                            </li>
                            <li class="mb-3 d-flex align-items-start">
                                <i class="fas fa-check text-gold me-3 mt-1"></i>
                                <span class="text-light">@Localizer["Tips_Dos_3"]</span>
                            </li>
                            <li class="mb-3 d-flex align-items-start">
                                <i class="fas fa-check text-gold me-3 mt-1"></i>
                                <span class="text-light">@Localizer["Tips_Dos_4"]</span>
                            </li>
                            <li class="d-flex align-items-start">
                                <i class="fas fa-check text-gold me-3 mt-1"></i>
                                <span class="text-light">@Localizer["Tips_Dos_5"]</span>
                            </li>
                        </ul>
                    </div>

                    <!-- Don'ts Section -->
                    <div>
                        <h5 class="text-danger mb-3">
                            <i class="fas fa-times-circle me-2"></i>@Localizer["Tips_Donts_Title"]
                        </h5>
                        <ul class="list-unstyled">
                            <li class="mb-3 d-flex align-items-start">
                                <i class="fas fa-times text-danger me-3 mt-1"></i>
                                <span class="text-light">@Localizer["Tips_Donts_1"]</span>
                            </li>
                            <li class="mb-3 d-flex align-items-start">
                                <i class="fas fa-times text-danger me-3 mt-1"></i>
                                <span class="text-light">@Localizer["Tips_Donts_2"]</span>
                            </li>
                            <li class="mb-3 d-flex align-items-start">
                                <i class="fas fa-times text-danger me-3 mt-1"></i>
                                <span class="text-light">@Localizer["Tips_Donts_3"]</span>
                            </li>
                            <li class="mb-3 d-flex align-items-start">
                                <i class="fas fa-times text-danger me-3 mt-1"></i>
                                <span class="text-light">@Localizer["Tips_Donts_4"]</span>
                            </li>
                            <li class="d-flex align-items-start">
                                <i class="fas fa-times text-danger me-3 mt-1"></i>
                                <span class="text-light">@Localizer["Tips_Donts_5"]</span>
                            </li>
                        </ul>
                    </div>

                    <!-- Emergency Alert -->
                    <div class="alert alert-warning mt-4 mb-0" role="alert">
                        <h6 class="alert-heading fw-bold">
                            <i class="fas fa-exclamation-triangle me-2"></i>@Localizer["Emergency_Title"]
                        </h6>
                        <p class="mb-0 small">
                            @Localizer["Emergency_Text"]
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- FAQ Section -->
    <div class="row mt-5">
        <div class="col-lg-10 mx-auto" data-aos="fade-up">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold text-uppercase mb-3">@Localizer["FAQ_Title"]</h2>
                <p class="text-muted lead">@Localizer["FAQ_Subtitle"]</p>
                <div class="golden-underline mx-auto" style="width: 80px; height: 4px; background-color: #d4af37;"></div>
            </div>

            <div class="accordion accordion-flush" id="faqAccordion">
                <!-- Question 1 -->
                <div class="accordion-item mb-3 border-0 rounded overflow-hidden shadow" style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);">
                    <h2 class="accordion-header" id="headingOne">
                        <button class="accordion-button collapsed fw-bold text-light py-4"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#collapseOne"
                                aria-expanded="false"
                                aria-controls="collapseOne"
                                style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%); border-left: 4px solid #d4af37;">
                            <i class="fas fa-question-circle text-warning me-3"></i>
                            @Localizer["FAQ_Q1"]
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#faqAccordion">
                        <div class="accordion-body text-muted p-4" style="background: #1a1a1a;">
                            <p class="mb-3">
                                @Localizer["FAQ_A1_P1"]
                            </p>
                            <p class="mb-0">
                                @Localizer["FAQ_A1_P2"]
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Question 2 -->
                <div class="accordion-item mb-3 border-0 rounded overflow-hidden shadow" style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);">
                    <h2 class="accordion-header" id="headingTwo">
                        <button class="accordion-button collapsed fw-bold text-light py-4"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#collapseTwo"
                                aria-expanded="false"
                                aria-controls="collapseTwo"
                                style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%); border-left: 4px solid #d4af37;">
                            <i class="fas fa-euro-sign text-warning me-3"></i>
                            @Localizer["FAQ_Q2"]
                        </button>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#faqAccordion">
                        <div class="accordion-body text-muted p-4" style="background: #1a1a1a;">
                            <p class="mb-3">
                                @Localizer["FAQ_A2_P1"]
                            </p>
                            <ul class="mb-3">
                                <li>@Localizer["FAQ_A2_L1"]</li>
                                <li>@Localizer["FAQ_A2_L2"]</li>
                                <li>@Localizer["FAQ_A2_L3"]</li>
                                <li>@Localizer["FAQ_A2_L4"]</li>
                            </ul>
                            <div class="alert alert-info mb-0">
                                @Localizer["FAQ_A2_P2"]
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Question 3 -->
                <div class="accordion-item mb-3 border-0 rounded overflow-hidden shadow" style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);">
                    <h2 class="accordion-header" id="headingThree">
                        <button class="accordion-button collapsed fw-bold text-light py-4"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#collapseThree"
                                aria-expanded="false"
                                aria-controls="collapseThree"
                                style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%); border-left: 4px solid #d4af37;">
                            <i class="fas fa-users text-warning me-3"></i>
                            @Localizer["FAQ_Q3"]
                        </button>
                    </h2>
                    <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#faqAccordion">
                        <div class="accordion-body text-muted p-4" style="background: #1a1a1a;">
                            <p class="mb-3">
                                @Localizer["FAQ_A3_P1"]
                            </p>
                            <p class="mb-0">
                                @Localizer["FAQ_A3_P2"]
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Question 4 -->
                <div class="accordion-item mb-3 border-0 rounded overflow-hidden shadow" style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);">
                    <h2 class="accordion-header" id="headingFour">
                        <button class="accordion-button collapsed fw-bold text-light py-4"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#collapseFour"
                                aria-expanded="false"
                                aria-controls="collapseFour"
                                style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%); border-left: 4px solid #d4af37;">
                            <i class="fas fa-calendar-alt text-warning me-3"></i>
                            @Localizer["FAQ_Q4"]
                        </button>
                    </h2>
                    <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#faqAccordion">
                        <div class="accordion-body text-muted p-4" style="background: #1a1a1a;">
                            <p class="mb-3">
                                @Localizer["FAQ_A4_P1"]
                            </p>
                            <ul class="mb-0">
                                <li>@Localizer["FAQ_A4_L1"]</li>
                                <li>@Localizer["FAQ_A4_L2"]</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Question 5 -->
                <div class="accordion-item mb-3 border-0 rounded overflow-hidden shadow" style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);">
                    <h2 class="accordion-header" id="headingFive">
                        <button class="accordion-button collapsed fw-bold text-light py-4"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#collapseFive"
                                aria-expanded="false"
                                aria-controls="collapseFive"
                                style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%); border-left: 4px solid #d4af37;">
                            <i class="fas fa-pencil-ruler text-warning me-3"></i>
                            @Localizer["FAQ_Q5"]
                        </button>
                    </h2>
                    <div id="collapseFive" class="accordion-collapse collapse" aria-labelledby="headingFive" data-bs-parent="#faqAccordion">
                        <div class="accordion-body text-muted p-4" style="background: #1a1a1a;">
                            <p class="mb-3">
                                @Localizer["FAQ_A5_P1"]
                            </p>
                            <p class="mb-0">
                                @Localizer["FAQ_A5_P2"]
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- CTA Section -->
    <div class="row mt-5 pt-5">
        <div class="col-lg-8 mx-auto" data-aos="zoom-in">
            <div class="text-center p-5 rounded shadow-lg" style="background: linear-gradient(135deg, #d4af37 0%, #c9a22e 100%);">
                <i class="fas fa-comments fa-3x text-dark mb-4"></i>
                <h3 class="display-6 fw-bold text-dark mb-3">@Localizer["CTA_Title"]</h3>
                <p class="lead text-dark mb-4">@Localizer["CTA_Subtitle"]</p>
                <a asp-controller="Contacts" asp-action="Index" class="btn btn-dark btn-lg px-5 py-3 rounded-pill shadow me-2">
                    <i class="fas fa-envelope me-2"></i> @Localizer["CTA_Button_Contact"]
                </a>
                <a asp-controller="Booking" asp-action="Create" class="btn btn-outline-dark btn-lg px-5 py-3 rounded-pill shadow">
                    <i class="fas fa-calendar-check me-2"></i> @Localizer["CTA_Button_Book"]
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Custom Styles -->
<style>
    .accordion-button:not(.collapsed) {
        background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%) !important;
        color: #d4af37 !important;
        border-left: 4px solid #d4af37 !important;
    }

    .accordion-button::after {
        filter: brightness(0) invert(1);
    }

    .accordion-button:focus {
        box-shadow: none;
        border-color: #d4af37;
    }

    .step-item {
        transition: all 0.3s ease;
    }

        .step-item:hover {
            transform: translateX(10px);
            background: rgba(212, 175, 55, 0.2) !important;
        }

    .card:hover {
        transform: translateY(-5px);
        transition: transform 0.3s ease;
    }

    @@media (max-width: 768px) {
        .display-3 {
            font-size: 2.5rem !important;
        }
    }
</style>

<!-- AOS Animation -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
<script>
    AOS.init({
        once: true,
        duration: 800,
        easing: 'ease-out-cubic'
    });
</script>