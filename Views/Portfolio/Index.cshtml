@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model IEnumerable<KlodTattooWeb.Models.PortfolioItem>

@{
    ViewData["Title"] = @Localizer["Page_Title"];
    var availableStyles = ViewBag.TattooStyles as List<string>;
    var selectedStyle = ViewBag.SelectedStyle as string;
}

<div class="text-center mb-5" data-aos="fade-up">
    <h1 class="display-4 text-uppercase" style="color: #d4af37;">@Localizer["Page_Title"]</h1>
    <p class="lead text-muted">@Localizer["Page_Subtitle"]</p>
    <div style="width: 60px; height: 3px; background-color: #d4af37; margin: 20px auto;"></div>
</div>

<!-- FILTRI -->
<div class="text-center mb-4" data-aos="fade-up" data-aos-delay="100">
    <a class="btn btn-outline-light btn-sm me-2 mb-2 @(string.IsNullOrEmpty(selectedStyle) ? "active" : "")"
       asp-action="Index" asp-controller="Portfolio">@Localizer["Filter_All"]</a>
    @if (availableStyles != null)
    {
        @foreach (var style in availableStyles)
        {
            <a class="btn btn-outline-light btn-sm me-2 mb-2 @(style == selectedStyle ? "active" : "")"
               asp-action="Index" asp-controller="Portfolio" asp-route-styleName="@style">@style</a>
        }
    }
</div>

<div class="row g-4 portfolio-container">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-lg-3 portfolio-item @(item.TattooStyle?.Name?.Replace(" ", "-"))" data-aos="zoom-in">
            <div class="position-relative overflow-hidden rounded shadow-sm" style="height: 300px; cursor: pointer;">

                <!-- Link per GLightbox -->
                <a href="@item.ImageUrl" class="glightbox" data-gallery="tattoo-gallery" data-title="@item.Title">
                    <img src="@item.ImageUrl" class="w-100 h-100" alt="@item.Title" loading="lazy"
                         style="object-fit: cover; transition: transform 0.6s ease;">
                </a>

                <div class="portfolio-overlay position-absolute top-0 start-0 w-100 h-100
                                d-flex flex-column justify-content-center align-items-center text-center p-3"
                     style="background: rgba(0,0,0,0.85); opacity: 0; transition: opacity 0.4s ease;">
                    <h5 class="text-uppercase mb-2" style="color: #d4af37;">@item.Title</h5>
                    <p class="text-white small mb-3">@item.TattooStyle?.Name</p>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-light btn-sm rounded-0 px-4">@Localizer["Button_View"]</a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .portfolio-item:hover img {
        transform: scale(1.12);
    }

    .portfolio-item:hover .portfolio-overlay {
        opacity: 1 !important;
    }

    .filter-btn.active {
        background-color: #d4af37;
        color: #1e1e1e;
        border-color: #d4af37;
    }
</style>

<!-- AOS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>

<!-- GLightbox -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glightbox/dist/css/glightbox.min.css" />
<script src="https://cdn.jsdelivr.net/npm/glightbox/dist/js/glightbox.min.js"></script>

<script>
    // Inizializza AOS
    AOS.init({ once: true });

    // Inizializza GLightbox
    const lightbox = GLightbox({ touchNavigation: true, loop: true, closeButton: true, zoomable: true });
</script>
