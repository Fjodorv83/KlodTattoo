                                <i class="fas fa-user-shield"></i>
                            </a>
                        }

                        <!-- Utilities Group -->
                        <div class="d-flex align-items-center gap-2">
                             <partial name="_LanguagePartial" />
                             <partial name="_LoginPartial" />
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
