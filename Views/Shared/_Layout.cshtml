                        <li class="mb-2">
                            <a asp-controller="Info" asp-action="Index" class="text-muted text-decoration-none">
                                <i class="fas fa-chevron-right me-2" style="color: #d4af37; font-size: 0.7rem;"></i>@Localizer["Nav_Info"] & FAQ
                            </a>
