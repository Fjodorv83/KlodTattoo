                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-2 position-relative nav-link-custom" asp-area="" asp-controller="Services" asp-action="Index">
                                <i class="fas fa-palette me-1"></i>@Localizer["Nav_Services"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-2 position-relative nav-link-custom" asp-area="" asp-controller="Info" asp-action="Index">
                                <i class="fas fa-info-circle me-1"></i>@Localizer["Nav_Info"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-2 position-relative nav-link-custom" asp-area="" asp-controller="Contacts" asp-action="Index">
                                <i class="fas fa-envelope me-1"></i>@Localizer["Nav_Contacts"]
                            </a>
                        </li>
                    </ul>

                    <!-- Desktop Divider -->
                    <div class="d-none d-lg-block mx-3" style="border-right: 1px solid rgba(255,255,255,0.2); height: 24px;"></div>

                    <!-- Functional Group (Booking + Auth + Lang) -->
                    <div class="d-flex align-items-lg-center gap-3 flex-column flex-lg-row mt-3 mt-lg-0">
                        <!-- Booking Button -->
